<div class="background">
  <div class="container">
    <div class="row justify-content-center">
      <div class="card custom-card">
        <div class="custom-card-header">
          <h2 class="text-center">Sign In</h2>
        </div>
        <div class="custom-card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs custom-form-inputs">
              <%= f.input :email, required: false, autofocus: true, class: "custom-form-control form-control", input_html: { autocomplete: "email" } %>
              <%= f.input :password, required: false, class: "form-control custom-form-control", input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="reset-password">
              <%= link_to "Forgot your password?", new_password_path(resource_name) %>
            </div>
            <div class="custom-card-action">
              <%= f.button :submit, "Sign In", class: "btn custom-btn-primary" %>
              <%= f.button :submit, "Sign Up", class: "btn custom-btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
